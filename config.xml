<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kuestegegenplastik.replaceplastic" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ReplacePlastic</name>
    <description>
      Mit dieser App wollen wir den Herstellern von Produkten sagen, dass wir uns andere Verpackungen wünschen.
      Damit sie endlich anfangen, beim Produktdesign auf umweltverträgliche Verpackungen zu achten und die
      Entwicklung von abbaubaren Materialien voranzutreiben.
    </description>
    <author email="post@kueste-gegen-plastik.de" href="http://www.kueste-gegen-plastik.de">
        Küste gegen Plastik e.V.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="android-build-tool" value="gradle" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.6" />
    <plugin name="cordova-plugin-android-permissions" spec="~0.11.0" />
    <plugin name="cordova-plugin-secure-storage" spec="~2.6.5" />
</widget>
